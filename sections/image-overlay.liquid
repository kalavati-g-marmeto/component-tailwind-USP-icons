{% style %}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top_mb | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom_mb | times: 0.75 | round: 0 }}px;
    }

    .image-overlay--media img {
        width: 100%;
        vertical-align: bottom;
    }

    @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<noscript>{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}</noscript>
<div class="{% if section.settings.enable__pagewidth %} page-width {% endif %} section-{{ section.id }}-padding">
  <div class="">
    <div class="iamge-overlay__container md:relative">
      <div class="image-overlay--media">
        {% assign mobile_image = section.settings.image_mobile | default: section.settings.image_desktop %}
        {% if section.settings.image_desktop != blank %}
          {% render 'image', mobileImage: mobile_image, desktopImage: section.settings.image_desktop %}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>

      <div class="image-overlay__content md:flex md:h-full md:w-full md:absolute md:top-0 md:left-0  banner__content--{{ section.settings.desktop_content_position }} color-{{ section.settings.color_scheme }}">
        <div class="md:max-w-[640px] md:h-fit md:mx-[50px] banner--content-align-{{ section.settings.text_alignment }} banner__box banner--content-align-mobile-{{ section.settings.mobile_text_alignment }}">
          {% if section.settings.heading != blank %}
            <h2 class="image-overlay__content-heading lg:mb-[48px] mt-[29px] md:mt-[0px] {{ section.settings.heading_size }}">
              {{ section.settings.heading }}
            </h2>
          {% endif %}
          {% if section.settings.sub_heading != blank %}
            <span class="image-overlay__content-sub_heading {{ section.settings.text_style }}">
              {{ section.settings.sub_heading }}
            </span>
          {% endif %}
          {% if section.settings.content != blank %}
            <div class="lg:mt-[24px] image-overlay__content-paragraph {{ section.settings.content_text_style }}">
              {{ section.settings.content }}
            </div>
          {% endif %}
            <div
              class="banner__buttons{% if section.settings.button_label_1 != blank and section.settings.button_label_2 != blank %} banner__buttons--multiple{% endif %}"
              {{ section.shopify_attributes }}
            >
              {%- if section.settings.primary_button_link != blank -%}
                <a
                  {% if section.settings.primary_button_link == blank %}
                  {% else %}
                    href="{{ section.settings.primary_button_text }}"
                  {% endif %}
                  class="button{% if section.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"
                >
                  {{- section.settings.primary_button_text | escape -}}
                </a>
              {%- endif -%}
              {%- if section.settings.secondary_button_link != blank -%}
                <a
                  {% if section.settings.secondary_button_link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ section.settings.secondary_button_link }}"
                  {% endif %}
                  class="button{% if section.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                >
                  {{- section.settings.secondary_button_text | escape -}}
                </a>
              {%- endif -%}
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

